# Application
APP_NAME=Twitter Clone
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/twitter

# Redis
REDIS_URL=redis://localhost:6379

# Security (generate a new secret key for production!)
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Fan-out settings
CELEBRITY_THRESHOLD=5000
TIMELINE_CACHE_TTL=300
TIMELINE_MAX_SIZE=800
